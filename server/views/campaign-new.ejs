<!DOCTYPE html>
<html>
<% include ./partials/_head %>

<style>
form#multiphase > #phase2, #phase3, #phase4, #show_all_data {
  display:none;
}
</style>


<body>
<% include ./partials/_header %>
<main>

  <div class="form-container card">
    <div class="row">
      <h5 class="form-title">Create New Campaign</h5>
    </div>

  <% if (isAuthenticated) { %>

    <div class="row">
      <form class="col s12" id="multiphase" onsubmit="return false">


        <div id="phase1">
          <div class="row">
            <label>Game</label>
            <select name="game" class="" id="game">
              <option name="option1" value="" disabled selected>Choose your option</option>
              <option value="4a130cc4-3bd4-42ad-ac93-484043a2d5bc">Senators vs Maple Leafs</option>
              <option value="">Senators vs Canadians</option>
              <option value="">Senators vs Oilers</option>
              <option value="">Senators vs Jets</option>
              <option value="">Senators vs Canucks</option>
            </select>
          </div>
        <button class="btn waves-effect waves-light button" onclick="processPhase1()">Continue</button>
        </div>


        <div id="phase2">
          <div class="row">
            <div class="input-field col s12">
              <input id="campaign_name" type="text" class="validate" name="campaign_name"/>
              <label class="active" for="campaign_name">Name of Campaign</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <textarea id="description" class="validate materialize-textarea" name="description" length="255"></textarea>
              <label class="active" for="description">Description</label>
            </div>
          </div>
        <button class="btn waves-effect waves-light button" onclick="processPhase2()">Continue</button>
        </div>



        <div id="phase3">
          <div class="row">
            <div class="input-field col s12">
              <input id="charity_name" type="text" class="validate" name="charity_name"/>
              <label class="active" for="charity_name">Charity Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="charity_url" type="text" class="validate" name="charity_url"/>
              <label class="active" for="charity_url">Charity URL</label>
            </div>
          </div>
        <button class="btn waves-effect waves-light button" onclick="processPhase3()">Continue</button>
        </div>


        <div id="phase4">
          <div class="row">
            <div class="input-field col s12">
              <input id="image_url" type="text" class="validate" name="image_url"/>
              <label class="active" for="image_url">Image URL</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="hashtag" type="text" class="validate" name="hashtag"/>
              <label class="active" for="hashtag">Hashtag</label>
            </div>
          </div>
        <button class="btn waves-effect waves-light button" onclick="processPhase4()">Continue</button>
        </div>

        <div id="show_all_data">
          <div class="row">
            Game: <span id="display_game"></span>
          </div>
          <div class="row">
            Campaign Name: <span id="display_campaign_name"></span>
          </div>
          <div class="row">
            Description: <span id="display_description"></span>
          </div>
          <div class="row">
            Chaity Name: <span id="display_charity_name"></span>
          </div>
          <div class="row">
            Charity URL: <span id="display_charity_url"></span>
          </div>
          <div class="row">
            Image URL: <span id="display_image_url"></span>
          </div>
          <div class="row">
            Twitter Handle: <span id="display_hashtag"></span>
          </div>
          <button class="btn waves-effect waves-light button" onclick="submitForm()"> Submit Campaign</button>
        </div>
      </form>
    </div>
  </div>

  <% } else { %>

      <div class="row">
      <form class="col s12" id="multiphase" onsubmit="return false">


        <div id="phase1">
          <div class="row">
            <label>Game</label>
            <select name="game" class="" id="game">
              <option name="option1" value="" disabled selected>Choose your option</option>
              <option value="4a130cc4-3bd4-42ad-ac93-484043a2d5bc">Senators vs Maple Leafs</option>
              <option value="">Senators vs Canadians</option>
              <option value="">Senators vs Oilers</option>
              <option value="">Senators vs Jets</option>
              <option value="">Senators vs Canucks</option>
            </select>
          </div>
        <button class="btn waves-effect waves-light button" onclick="processPhase1()">Continue</button>
        </div>


        <div id="phase2">
          <div class="row">
            <div class="input-field col s12">
              <input id="campaign_name" type="text" class="validate" name="campaign_name"/>
              <label class="active" for="campaign_name">Name of Campaign</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <textarea id="description" class="validate materialize-textarea" name="description" length="255"></textarea>
              <label class="active" for="description">Description</label>
            </div>
          </div>
        <button class="btn waves-effect waves-light button" onclick="processPhase2()">Continue</button>
        </div>



        <div id="phase3">
          <div class="row">
            <div class="input-field col s12">
              <input id="charity_name" type="text" class="validate" name="charity_name"/>
              <label class="active" for="charity_name">Charity Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="charity_url" type="text" class="validate" name="charity_url"/>
              <label class="active" for="charity_url">Charity URL</label>
            </div>
          </div>
        <button class="btn waves-effect waves-light button" onclick="processPhase3()">Continue</button>
        </div>


        <div id="phase4">
          <div class="row">
            <div class="input-field col s12">
              <input id="image_url" type="text" class="validate" name="image_url"/>
              <label class="active" for="image_url">Image URL</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="hashtag" type="text" class="validate" name="hashtag"/>
              <label class="active" for="hashtag">Hashtag</label>
            </div>
          </div>
        <button class="btn waves-effect waves-light button" onclick="processPhase4()">Continue</button>
        </div>

        <div id="show_all_data">
          <div class="row">
            Game: <span id="display_game"></span>
          </div>
          <div class="row">
            Campaign Name: <span id="display_campaign_name"></span>
          </div>
          <div class="row">
            Description: <span id="display_description"></span>
          </div>
          <div class="row">
            Chaity Name: <span id="display_charity_name"></span>
          </div>
          <div class="row">
            Charity URL: <span id="display_charity_url"></span>
          </div>
          <div class="row">
            Image URL: <span id="display_image_url"></span>
          </div>
          <div class="row">
            Twitter Handle: <span id="display_hashtag"></span>
          </div>
          <button class="btn waves-effect waves-light button" onclick="#modal1"> Submit Campaign</button>
        </div>
      </form>
    </div>
  </div>

    <!-- Modal Structure -->

  <div id="modal1" class="modal">
    <div class="modal-content">
      <h5>Login to Create Campaign</h5>
      <form class="col s12" id="campaign-login-modal" action="/campaigns/new/login" method="POST">
        <div class="row">
          <div class="input-field col s12">
            <input id="username" type="text" class="validate" name="username" autocomplete="new-username">
            <label for="username">Username</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" class="validate" name="password" autocomplete="new-password">
            <label for="password">Password</label>
          </div>
        </div>
        <div class="modal-footer">
          <a href="/users/new">Not a user? Register.</a>
          <button class="btn waves-effect waves-light button" type="submit" name="action">Login
          <i class="material-icons right"></i>
          </button>
        </div>
      </form>
    </div>
  </div>

  <% } %>

</main>
<% include ./partials/_footer %>

</body>
</html>
