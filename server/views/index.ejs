<!DOCTYPE html>
<html>
<% include ./partials/_head %>
<body>
<% include ./partials/_header %>
<main>

  <a class="twitter-timeline"  width="300"
  height="500" data-height="400" href="https://twitter.com/SensMotB">Tweets by SensMotB</a>

  <% if(isAuthenticated) { %>
  <a class="btn button" href="/campaigns/<%= campaign_id %>/pledges/new">Make a pledge</a>
  <% } else { %>

  <a class="waves-effect waves-light btn button modal-trigger" href="#modal1">Login to make a pledge</a>

  <div id="modal1" class="modal">
    <div class="modal-content">
      <h5>Login to make pledge</h5>
      <form class="col s12" action="/campaigns/<%= campaign_id %>" method="POST">
        <div class="row">
          <div class="input-field col s12">
            <input id="username" type="text" class="validate" name="username" autocomplete="new-username">
            <label for="username">Username</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" class="validate" name="password" autocomplete="new-password">
            <label for="password">Password</label>
          </div>
        </div>
        <div class="modal-footer">
          <a href="/users/new">Not a user? Register.</a>
          <button class="btn waves-effect waves-light button" type="submit" name="action">Login
          <i class="material-icons right"></i>
          </button>
        </div>
      </form>
    </div>
  </div>










  <% } %>

  <div id="react-root"></div>



  <script src="//localhost:3000/build/bundle.js"></script>
</main>

</body>
</html>
