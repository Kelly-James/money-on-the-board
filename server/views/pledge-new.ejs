<!DOCTYPE html>
<html>
<% include ./partials/_head %>
<body>
<% include ./partials/_header %>

<div class="row">
  <form class="col s12" action="/campaigns/<%= campaign_id %>/pledges/new" method="POST">
    <div class="row">

     <label>Team</label>
      <select name="team" class="browser-default selectpicker">
        <option name="option1" value="" disabled selected>
          Choose your Team
        </option>
        <option value="4416f5e2-0f24-11e2-8525-18a905767e44">
          Ottawa Senators
        </option>
        <option value="441730a9-0f24-11e2-8525-18a905767e44">
          Toronto Maple Leafs
        </option>
      </select>

      <label>Player</label>
      <select name="player" class="browser-default selectpicker">
        <option name="option1" value="" disabled selected>
          Choose your Player
        </option>
        <option name="option2" value="42fa3dcd-0f24-11e2-8525-18a905767e44">
          Erik Karlsson
        </option>
        <option name="option3" value="ccba87dc-0f34-4203-8f8f-00b9b6b827ba">
          Mark Stone
        </option>
        <option name="option4" value="431a2b9d-0f24-11e2-8525-18a905767e44">
          Dion Phaneuf
        </option>
        <option name="option5" value="0992487d-52ee-4ec5-ac3a-9f4d583e60ac">
          Curtis Lazar
        </option>
      </select>

      <label>Event</label>
      <select name="inGameEvent" class="browser-default selectpicker">
        <option name="option1" value="" disabled selected>Choose your in-game event</option>
        <option name="goal" value="6">
          Goal
        </option>
        <option name="assist" value="8">
          Assist
        </option>
        <option name="point" value="9">
          Point
        </option>
        <option name="hit" value="4">
          Hit
        </option>
        <option name="penalty" value="5">
          Penalty
        </option>
        <option name="faceoff" value="2">
          Faceoff Won
        </option>
        <option name="shotsaved" value="3">
          Shot Saved
        </option>
      </select>


        <div class="row">
        <div class="input-field col s12">
          <input id="money" type="text" class="validate" name="money" placeholder="$">
          <label class="active" for="money">Pledge Amount</label>
        </div>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right"></i>
    </button>
  </form>
</div>



<% include ./partials/_footer %>
</body>
</html>
