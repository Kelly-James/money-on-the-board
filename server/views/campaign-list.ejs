<!DOCTYPE html>
<html>
<% include ./partials/_head %>
<body>
<% include ./partials/_header %>
<main>

<div class="container">
  <h1>Choose a Campaign</h1>
    <div class="row">
      <% campaigns.forEach(function(campaign) { %>
        <div class="col l4 m8 offset-m2 s12">
          <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="<%= campaign.image_url %>">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= campaign.title %><i class="material-icons right">more_vert</i></span>
              <!-- <a href="/campaigns/<%= campaign.id %>" class="btn button">Go to Campaign</a> -->
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= campaign.title %><i class="material-icons right">close</i></span>
              <span class="card-title grey-text text-darken-4"><%= campaign.charity_name %></span>
              <p><%= campaign.description %></p>
              <a href="/campaigns/<%= campaign.id %>" class="btn button">Go to Campaign</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
</div>

</main>
<% include ./partials/_footer %>

</body>
</html>
